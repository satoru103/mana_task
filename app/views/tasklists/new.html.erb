<div class="tasklist__new">
  <div class="tasklist-container">
    <%= form_with model: @tasklist, url: { action: :create }, class: "new_tasklist", local: true do |f| %>
      <% if @tasklist.errors.any? %>
        <p class="tasklist-title">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: "off", class: "tasklist-form", placeholder: "リスト名" %>
      <div class="tasklist-btn"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>
