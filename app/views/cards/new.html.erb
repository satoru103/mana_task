<div class="card__new">
  <div class="card-container">
    <%=form_with model:@card, url:{action: :create},class: "new_card",local: true do |c| %>
      <%= c.hidden_field :tasklist_id, value: @tasklist.id %>
      <% if @card.errors.any? %>
        <p class="card-name">カード名は1～255文字以内で入力してください</p>
      <% end %>

      <%= c.label :card_name %>
      <%= c.text_field :card_name, autofocus: "off", class: "cardName-form", placeholder: "タスク名" %>

      <%= c.label :content %>
      <%= c.text_area :content, autofocus: "off", class: "cardContent-form", placeholder: "タスク詳細" %>
      <div class="card-btn"><%= c.submit "作成", class: "cardSubmitBtn" %></div>
    <% end %>
  </div>
</div>
